<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register User</title>
    <link rel="stylesheet" href="https://site-assets.fontawesome.com/releases/v6.2.1/css/all.css">
    <link rel="stylesheet" href="https://site-assets.fontawesome.com/releases/v6.2.1/css/sharp-solid.css">
    <link rel="stylesheet" href="/css/mainHome.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <style>
        body {
            background: #212121;
        }

        i {
            color: #ccc;
        }

        .titleofpage {
            height: 12vh;
            background: #191919;
            display: flex;
            justify-content: center;
            align-items: center;
            border-bottom: 1px solid #ccc;
        }

        form {
            margin: 30px auto;
            width: 60vw;
            display: flex;
            justify-content: center;
            flex-direction: column;
            gap: 1rem;
            align-items: center;
        }

        .wrapeAround {
            border: 1px solid #5d5d5d;
            padding: 10px 10px 10px 20px;
            border-radius: 4px;
            display: flex;
            gap: 1rem;
            align-items: center;
            width: 80%;
        }

        .wrapeAroundhalf {
            border: 1px solid #5d5d5d;
            padding: 10px 10px 10px 20px;
            border-radius: 4px;
            display: flex;
            gap: 1rem;
            align-items: center;
            width: 40%;
        }

        .wrapeAround input,
        .wrapeAroundhalf input {
            background: none;
            color: #cCcCcC;
            border: none;
            font-weight: 500;
            outline: none;
            width: 100%;
        }

        .getthemproperly {
            display: flex;
            justify-content: center;
            gap: 0.5rem;
            align-items: center;
            width: 80%;
        }

        .extraReduction {
            width: 80%;
        }

        .genaddedbutton {
            font-size: 13px;
            padding: 3px;
            cursor: pointer;
            width: 20%;
        }

        .getthemproperly .wrapeAroundhalf {
            width: 100%;
        }

        .getthemproperly .wrapeAroundhalf input {
            width: 100%;
        }

        #empKey {
            pointer-events: none;
            user-select: none;
        }

        #something {
            width: 100%;
            outline: none;
            border: none;
        }

        input::placeholder {
            font-size: 13px;
        }

        button {
            background: none;
            outline: none;
            border: none;
            cursor: pointer;
            outline: none;
        }

        #submitForm {
            border: none;
            outline: none;
            margin-top: 30px;
            padding: 0;
            border-radius: 0;
            padding: 10px 30px;
            border-radius: 4px;
            color: #fff;
            background: #8046ff;
        }

        .harshalBtn {
            background: #005EFF;
            color: #fff;
        }

        .harshalBtn:hover {
            background: #004acb;
            color: #fff;
        }
    </style>
</head>

<body>
    <h2 class="titleofpage" data-aos="fade-up" style="color: #7a7a7a;">User Registration</h2>
    <form action="/registerClient" method="post">
        <div class="getthemproperly" data-aos="fade-down">
            <div class="wrapeAroundhalf">
                <span class="iconHolder"><i class="fa-duotone fa-user"></i></span>
                <input type="text" placeholder="Enter first name here"
                    title="Enter your first name here (Example: Harshal)" autocomplete="off" name="firstName" required>
            </div>
            <div class="wrapeAroundhalf">
                <span class="iconHolder"><i class="fa-duotone fa-user"></i></span>
                <input type="text" title="Enter your last name here (Example: Warade)"
                    placeholder="Enter last name here" name="lastName" autocomplete="off" required>
            </div>
        </div>
        <div class="wrapeAround">
            <span class="iconHolder"><i class="fa-duotone fa-envelope"></i></span>
            <input type="email" title="Enter your email here" placeholder="Enter your email here" autocomplete="off"
                name="email" required>
        </div>
        <div class="getthemproperly">
            <div class="wrapeAroundhalf">
                <span class="iconHolder"><i class="fa-duotone fa-lock"></i></i></span>
                <input type="password"
                    title="Create a password that you can remember, we advice to write it down somewhere"
                    placeholder="Create a password" name="password" autocomplete="off" required>
            </div>
            <div class="wrapeAroundhalf">
                <span class="iconHolder"><i class="fa-duotone fa-lock"></i></i></span>
                <input type="password" title="This field should be same as the password's"
                    placeholder="Confirm your password" autocomplete="off" name="confirmPassword" required>
            </div>
        </div>
        <div class="getthemproperly">
            <div class="wrapeAroundhalf">
                <span class="iconHolder"><i class="fa-sharp fa-regular fa-at"></i></span>
                <input type="text" name="username" placeholder="Choose a username for you" autocomplete="off" required>
            </div>
            <div class="wrapeAroundhalf">
                <span class="iconHolder"><i class="fa-duotone fa-phone"></i></span>
                <input type="number" name="contactNumber" placeholder="Enter your phone number here"
                    autocomplete="off" required>
            </div>
        </div>
        <div style="margin-top: 20px; display: flex; justify-content: center; align-items: center; gap: 2rem;">
            <button type="submit" class="btn harshalBtn">Register</button>
            <a href="/jfs845ahdsklLKJSHD364qjashdDZBNMbuywe9837498ljHNZDB" class="btn btn-danger">Log In</a>
        </div>
    </form>
    <script>
        let sameasabove = document.getElementById('sameasabove');
        let paddress = document.getElementById('paddress');
        let taddress = document.getElementById('taddress');
        let generateKeyforEmployee = document.getElementById('generateKeyforEmployee');
        let empKey = document.getElementById('empKey');
        empKey.style.cursor = 'not-allowed';
        sameasabove.addEventListener('click', (tevent) =>
        {
            tevent.preventDefault();
            taddress.value = paddress.value;
        })
        generateKeyforEmployee.addEventListener('click', function (prevEvent)
        {
            prevEvent.preventDefault();
            empKey.value = `${Math.floor(Math.random() * 10)}${Math.floor(Math.random() * 10)}${Math.floor(Math.random() * 10)}${Math.floor(Math.random() * 10)}${Math.floor(Math.random() * 10)}${Math.floor(Math.random() * 10)}`;
        }, { once: true })
    </script>

    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
        AOS.init();
    </script>
</body>

</html>